{
  "name": "heimdall-layouts",
  "version": "1.0.0",
  "description": "heimdall layouts components",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "ln -fs . $prefix",
    "start": "./run.js command='node scripts/dev_server'",
    "start:test": "./run.js envFile=.env.test command='npx http-server --silent -p $testPort -c1 -S -C assets/ssl/cert.pem -K assets/ssl/key.pem --cors'",
    "startd": "npm start &> server.log &",
    "startd:test": "npm run start:test &> server_test.log &",
    "lint": "eslint --no-error-on-unmatched-pattern",
    "standalone-lint": "npm run lint -- '{tests/**/*,lib/**/*,scripts/**/*,src/**/*,index,playwright.config}.{js,cjs,mjs,svelte}'",
    "test": "./run.js envFile=.env.test command='npm run test:node && npm run test:ui'",
    "test:node": "./run.js envFile=.env.test command='node bin/test.js'",
    "test:ui": "./run.js envFile=.env.test command='npm run dev-test:ui --'",
    "posttest:ui": "git checkout layouts && git checkout shared_components",
    "predev-test:ui": "npm run dev -- build:shared && npm run dev -- build:all-components",
    "dev-test:ui": "./run.js envFile=.env.test command='npx playwright test'",
    "create:layout": "./run.js command='node scripts/create_layout'",
    "build:layout": "./run.js command='node scripts/build_layout'",
    "build:all-components": "./run.js command='node scripts/build_all_components'",
    "build:shared": "./run.js command='node scripts/build_shared'",
    "create:component": "./run.js command='node scripts/create_component'",
    "build:component": "./run.js command='node scripts/build_component'",
    "watch:component": "./run.js command='node scripts/watch_component'",
    "create:component-test": "./run.js command='node scripts/create_component_test'",
    "update-production-build": "./run.js command='node scripts/update_production_build'",
    "dev": "NODE_ENV=development npm run"
  },
  "author": "janouma",
  "license": "ISC",
  "volta": {
    "node": "20.5.0"
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "plugins": [
      "svelte3"
    ],
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "rules": {
          "import/first": "off",
          "import/no-duplicates": "off",
          "import/no-mutable-exports": "off",
          "no-multiple-empty-lines": [
            "error",
            {
              "max": 1,
              "maxBOF": 2,
              "maxEOF": 0
            }
          ]
        },
        "processor": "svelte3/svelte3"
      }
    ],
    "settings": {
      "svelte3/compiler-options": {
        "customElement": true
      }
    }
  },
  "devDependencies": {
    "@apexearth/egrep": "^1.0.9",
    "@japa/expect": "^2.0.2",
    "@japa/run-failed-tests": "^1.1.1",
    "@japa/runner": "^2.5.1",
    "@japa/spec-reporter": "^1.3.3",
    "@playwright/test": "^1.40.0",
    "browser-sync": "^2.29.3",
    "es6-template-strings": "^2.0.1",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "postcss": "^7.0.36",
    "postcss-preset-env": "^6.7.0",
    "shelljs": "^0.8.5",
    "simple-git": "^3.19.1",
    "standard": "^17.1.0",
    "testdouble": "^3.18.0"
  },
  "dependencies": {
    "@heimdall/shared-lib": "^1.3.0",
    "@heimdall/utils": "^2.1.2",
    "fuse.js": "^6.0.0",
    "joi": "^17.7.0",
    "loglevel": "^1.8.1",
    "svelte": "^3.58.0"
  }
}
